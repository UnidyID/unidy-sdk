{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "../sdk/src/api/src/api_client.ts", "../sdk/src/api/src/shared.ts", "../sdk/src/api/src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
