{
  "name": "@unidy.io/sdk",
  "version": "1.2.0-alpha12",
  "publishConfig": {
    "tag": "alpha",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UnidyID/unidy-sdk/tree/master/packages/sdk"
  },
  "description": "Unidy SDK: API Client, Stencil Components, and React Wrappers",
  "homepage": "https://sdk-demo.unidy.io",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "clean": "rm -rf dist www loader .stencil",
    "build": "bun run clean && touch src/demo-build.css && stencil build && bun run build:standalone",
    "build:standalone": "bun build ./src/api/standalone.ts --outdir ./dist/collection/api --format esm && bun run build:standalone:types",
    "build:standalone:types": "tsc -p tsconfig.standalone.json",
    "dev:stencil": "stencil build --dev --watch --serve",
    "dev:css": "tailwindcss -i ./src/demo.css -o ./src/demo-build.css --content './src/**/*.{html}' --watch",
    "dev": "concurrently \"bun run dev:stencil\" \"bun run dev:css\"",
    "test": "stencil test --spec --e2e && jest",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "type": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@sentry/browser": "^10.33.0",
    "@stencil/store": "^2.2.2",
    "date-fns": "^4.1.0",
    "i18next": "^25.7.4",
    "jwt-decode": "^4.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rollup-plugin-visualizer": "^6.0.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-alias": "^6.0.0",
    "@stencil/core": "4.38.3",
    "@stencil/react-output-target": "^1.2.1",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "latest",
    "@types/eventemitter3": "^2.0.4",
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.8",
    "@types/react": "^19.2.8",
    "baseline-browser-mapping": "^2.9.15",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eventemitter3": "^5.0.1",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.35.0",
    "stencil-tailwind-plugin": "^2.0.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "web-components",
    "unidy",
    "unidy-sdk",
    "unidy-web-components",
    "newsletter",
    "unidy-newsletter",
    "newsletter-sdk",
    "react",
    "next"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    },
    "./sdk.css": "./dist/sdk.css",
    "./locales": "./dist/locales",
    "./api": {
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.cjs.js"
    },
    "./auth": {
      "import": "./dist/auth/sdk.esm.js",
      "require": "./dist/auth/sdk.cjs.js"
    },
    "./newsletter": {
      "import": "./dist/newsletter/sdk.esm.js",
      "require": "./dist/newsletter/sdk.cjs.js"
    },
    "./profile": {
      "import": "./dist/profile/sdk.esm.js",
      "require": "./dist/profile/sdk.cjs.js"
    },
    "./shared": {
      "import": "./dist/shared/sdk.esm.js",
      "require": "./dist/shared/sdk.cjs.js"
    },
    "./ticketable": {
      "import": "./dist/ticketable/sdk.esm.js",
      "require": "./dist/ticketable/sdk.cjs.js"
    },
    "./standalone": {
      "import": "./dist/collection/api/standalone.js",
      "types": "./dist/types/api/standalone.d.ts"
    }
  }
}
